@sirius(iconFolder = "uk.ac.york.aconite.family/icons/")
@namespace(uri="http://www.eclipse.org/sirius/sample/basicfamily", prefix="basicfamily")
package basicfamily;
//Order in a nicer way
//Rename to candidates <- sce					
//Add within to options for container
//Change pro to labelValue
//template rather than import + fix it
@sirius.diagram(name = "Relationships")

@sirius.node(name = "Rel Default",~abstract = "true", color = "white", showIcon = "true", childrenPresentation = "List")

@sirius.container(extend = "Rel Default", name = "Person", foregroundColor = "light_green", container = "Relationships")

@sirius.border(extend = "Rel Default", sce="parents", name = "Parent", container =  "Person")

@sirius.node(extend = "Rel Default", sce = "children", name = "Child", container = "Person")

@sirius.container(extend = "Rel Default", name = "Siblings", labelValue = "Siblings", foregroundColor = "light_yellow", container = "Relationships", showIcon = "false")

@sirius.node(name = "Sibling",  container = "Siblings", sce = "parents.children->excluding(self)", showIcon = "true")
abstract class Person {
	attr String name;
	@sirius.edge(name = "SiblingsEdge",creatable = "false", labelExpression = "", color = "gray", container = "Relationships", targetFinderExpression = "aql:self", sourceNode = "Person", targetNode = "Siblings")
	ref Person[*]#parents children;
	ref Person[0..2]#children parents;
	@sirius.edge(creatable = "true", name = "Mother", container = "Persons" , sourceNode = "Man, Woman", labelExpression = "", color = "purple")
	derived ref Woman mother;
	@sirius.edge(extend = "Mother", name = "Father", color = "blue")
	derived ref Man father;
}

@sirius.diagram(name = "Persons")
class Family {
	attr String name;
	val Person[*] members;
}
	
@sirius.node(name = "Man", container = "Persons", shape = "image", imagePath = "man.svg", borderSize= "0", directlyEditable = "true")
class Man extends Person {
}

@sirius.node(extend = "Man", name = "Woman", imagePath = "woman.svg")
class Woman extends Person {
}

